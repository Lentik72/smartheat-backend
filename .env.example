# SmartHeat Backend API Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=https://smartheat.app,https://www.smartheat.app

# API Keys (Required)
OPENWEATHER_API_KEY=your_openweather_api_key_here
FRED_API_KEY=your_fred_api_key_here
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key_here
EIA_API_KEY=your_eia_api_key_here

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smartheat?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars

# Email Configuration (for supplier invitations and admin alerts)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
ADMIN_EMAIL=your_admin_email@example.com

# Admin Configuration
ADMIN_KEY=your_admin_access_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_CHECK_PERIOD=60

# Feature Flags
ENABLE_COMMUNITY_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_INVITATIONS=true

# Monitoring
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true